<!DOCTYPE html>
<head>
	<meta charset="utf-8">
	<title><%= @item.title %></title>
</head>
<body>
	<h4><%= link_to "Continue shopping", root_path %></h4>
		<div class="row text-center item">
			<div class='col-4'>
				<%= cl_image_tag(@item.image) %>
				<div class = "border-line">
				</div>
				</div>
			<div class='col-4 card '>
				<div class='card-body '>
				<h2><strong><%= @item.title %></strong></h2> <br />
				<%= @item.description %> <br /> <br />
				Price: <%= number_to_currency(@item.price) %> <br />
				<% unless @item.retired? %>
				<br>
				<%= link_to "Add to cart", cart_path(item_id: @item.id), method: :post, class: "badge badge-primary" %></center>
				<% else %>
				<div class="badge badge-secondary">
					Retired
				</div>
				<% end %>
				</div>
			</div>
		</div>
</body>
